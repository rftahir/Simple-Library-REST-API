generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Books {
  id   Int    @id @default(autoincrement())
  code String @db.VarChar(20) @unique
  title String
  author String
  stock Int @default(0)

  rents Rents[]
}

model Members {
  id   Int    @id @default(autoincrement())
  code String @db.VarChar(20) @unique
  name String
  penalyEndDate DateTime?

  rents Rents[]
}

model Rents {
  id   Int    @id @default(autoincrement())
  booksId Int
  membersId Int
  rentDate DateTime
  returnDate DateTime?

  book Books @relation(fields: [booksId], references: [id])
  member Members @relation(fields: [membersId], references: [id])
}